<h3 class="text-center" style="margin-bottom: 20px; "> La Liste des Blocs</h3>
<table class="table table-striped text-center">
  <thead class="">
    <tr>
      <th>Nom</th>
      <th>Libelle</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each list}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.libelle}}</td>
        <td>
          <a
            class="btn btn-outline-dark btn-sm"
            href="/bloc/{{this._id}}"
          >Modifier</a>
          <a
            class="btn btn-outline-dark btn-sm"
            href="/bloc/delete/{{this._id}}"
            onclick="return confirm('Are you sure to delete this record ?');"
          >Supprimer</a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
<h3><a class="btn btn-outline-dark align-center btn-block" href="/bloc"><i
      class="fa fa-plus"
    ></i>
    Ajouter un Bloc</a></h3>
