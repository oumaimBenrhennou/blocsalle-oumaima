<h3>{{viewTitle}}</h3>

<form action="/crenau" method="POST" autocomplete="off">
  <input type="hidden" name="_id" value="{{crenau._id}}" />
  <div class="form-group">
    <label>Debut de la séance</label>
    <input
      type="time"
      class="form-control"
      name="hrdebut"
      placeholder="hrdebut "
      value="{{crenau.hrdebut}}"
    />
    <div class="text-danger">
      {{crenau.hrdebutError}}</div>
  </div>
  <div class="form-group">
    <label>Fin de la séance</label>
    <input
      type="time"
      class="form-control"
      name="hrfin"
      placeholder="hrfin"
      value="{{crenau.hrfin}}"
    />
    <div class="text-danger">
      {{crenau.hrfinError}}</div>
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-primary"><i class=""></i>
      Ajouter</button>
    <a class="btn btn-outline-dark" href="/crenau/list"><i class=""></i>
      La liste des crenaux</a>

  </div>
</form>