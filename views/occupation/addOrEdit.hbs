<h3>{{viewTitle}}</h3>

<form action="/occupation" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{occupation._id}}">
    <div class="form-group">
        <label>Date</label>
        <input id="datefield" class="form-control" type='date' name="date" value="{{occupation.date}}" min='1899-01-01' max='2000-13-13'></input>

        <div class="text-danger">
            {{occupation.dateError}}</div>
    </div>
    
    <div class="form-group">
        <label for="crenau">Crenau : </label>
            <select  class="form-control"  id="crenau" name="crenau">
                {{#each crenaus}}
            <option name={{this._id}} value={{this._id}}>{{this.hrdebut}} to {{this.hrfin}} </option>
                {{/each}}
            </select>
    </div>
    <div class="form-group">
        <label for="salle">Salle : </label>
            <select  class="form-control"  id="salle" name="salle">
                {{#each salles}}
            <option name={{this._id}} value={{this._id}}>{{this.name}}</option>
                {{/each}}
            </select>
    </div>
    

    <div class="form-group">
        <button type="submit" class="btn btn-primary"><i class=""></i> Ajouter</button>
        <a class="btn btn-outline-dark" href="/occupation/list"><i class=""></i> La liste des occupations</a>
        
    </div>
</form>
<script>
var today = new Date();
var dd = today.getDate();
var mm = today.getMonth() + 1; //January is 0!
var yyyy = today.getFullYear();

if (dd < 10) {
   dd = '0' + dd;
}

if (mm < 10) {
   mm = '0' + mm;
} 
    
today = yyyy + '-' + mm + '-' + dd;
document.getElementById("datefield").setAttribute("min", today);
</script>