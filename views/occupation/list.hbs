            <th>Date</th>
            <th>Crenau</th>
            <th>Salle</th>
            <th>Actions</th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.date}}</td>
            <td>{{this.crenauhr}}</td>
            <td>{{this.namesalle}}</td>
            

            
            <td>
                <a href="/occupation/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/occupation/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
